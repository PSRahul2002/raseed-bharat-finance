# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Required Google Cloud Configuration
GOOGLE_PROJECT_ID=your-google-cloud-project-id
GOOGLE_API_KEY=your-google-ai-api-key

# Optional: Service Account (for enhanced authentication)
GOOGLE_SERVICE_ACCOUNT_PATH=/path/to/your/service-account.json

# Optional: Google Wallet Configuration
WALLET_ISSUER_ID=your-wallet-issuer-id
WALLET_CLASS_ID=your-wallet-class-id

# Optional: Application Configuration
PORT=8081
LOG_LEVEL=INFO

# Optional: Vector Database Configuration (for future use)
VECTOR_DB_URL=your-vector-database-url
VECTOR_DB_API_KEY=your-vector-db-api-key

